{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rrk0123.github.io/ev_simulation_sw/schema/scenario.schema.json",
  "title": "Simulation Scenario",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "time_step", "step_count"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique identifier for the scenario"
    },
    "description": {
      "type": "string",
      "description": "Human readable description"
    },
    "time_step": {
      "type": "number",
      "exclusiveMinimum": 0,
      "description": "Simulation time step in seconds"
    },
    "step_count": {
      "type": "integer",
      "minimum": 1,
      "description": "Total number of solver steps"
    },
    "parameters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "value": {
            "type": "number"
          }
        }
      },
      "description": "Model parameters overrides"
    },
    "active_cell_id": {
      "type": "string",
      "description": "Identifier of the cell definition to simulate"
    },
    "cells": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "cell_id",
          "model_kind",
          "nominal_voltage",
          "capacity_ah",
          "internal_resistance"
        ],
        "additionalProperties": false,
        "properties": {
          "cell_id": {
            "type": "string",
            "minLength": 1
          },
          "chemistry": {
            "type": "string"
          },
          "model_kind": {
            "type": "string",
            "enum": ["ohmic", "rc", "thermal"],
            "description": "Cell model type"
          },
          "nominal_voltage": {
            "type": "number"
          },
          "capacity_ah": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "internal_resistance": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "rc_time_constant_s": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "rc_resistance": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "mass_kg": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "heat_capacity_j_per_kg_k": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "thermal_resistance_k_per_w": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "surface_area_m2": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "base_current_a": {
            "type": "number"
          },
          "speed_current_gain": {
            "type": "number"
          },
          "accel_current_gain": {
            "type": "number"
          },
          "ocv_min": {
            "type": "number"
          },
          "ocv_max": {
            "type": "number"
          }
        }
      }
    },
    "drive_cycle": {
      "type": "object",
      "required": ["id", "sample_interval", "samples"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "sample_interval": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "samples": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["timestamp", "speed_kph"],
            "additionalProperties": false,
            "properties": {
              "timestamp": {
                "type": "number"
              },
              "speed_kph": {
                "type": "number"
              },
              "distance_m": {
                "type": "number"
              },
              "grade_percent": {
                "type": "number"
              },
              "phase": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "environment": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ambient_temperature_c": {
          "type": "number"
        },
        "initial_cell_temperature_c": {
          "type": "number"
        }
      }
    }
  }
}
